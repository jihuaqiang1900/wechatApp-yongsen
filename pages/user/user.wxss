/* pages/user/user.wxss */
.header{
    height: 120px;
    width: 100%;
    background-color: #f1f1f1;
    position: relative;
}
.userImage{
    width: 50px;
    height: 50px;
    border-radius: 50%;
    position: absolute;
    left: 50%;
    top: 20px;
    transform:translateX(-50%)
}
.userName{
    display: inline-block;
    padding-top: 80px;
    width: 100%;
    height: 24px;
    line-height:24px;
    font-size: 16px;
    text-align: center
}
.block{
    width: 100%;
    height: 20px;
    background-color: #f9f9f9;
}
.item{
    display: inline-block;
    width: calc(100%/4);
    height: 100px;
    border: 1px solid #f6f6f6;
    position: relative;
    margin: -1px;
}
.item_image{
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: 20px;
    height: 30px;
    width: 30px;
}
.item_name{
    display: inline-block;
    padding-top: 60px;
    width: 100%;
    height: 24px;
    line-height:24px;
    font-size: 12px;
    text-align: center
}